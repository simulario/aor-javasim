<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="prettyprint.xsl"?>
<SimulationScenario
	xmlns="http://aor-simulation.org"
    xmlns:aors="http://aor-simulation.org"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://aor-simulation.org ../../../../../ext/aorsl/AORSL-0-8-4_flat.xsd"
    version="0.8.4"
    simulationManagerDirectory="../../../../../"
	scenarioName="MovingCube"
	scenarioTitle="A moving cube">
	
	<SimulationParameters simulationSteps="10000" stepDuration="100" timeUnit="ms" stepTimeDelay="20"/>
	
	<SimulationModel modelName="MovingCube" modelTitle="a moving cube">
		<documentation>
            <dc:creator>Susanne Schoelzel</dc:creator>
            <dc:created>20110221</dc:created>
            <dc:description>
                This simulation models a moving cube in a two dimensional lateral view.
            </dc:description>
        </documentation>
        
        <SpaceModel geometry="Euclidean" spatialDistanceUnit="m">
            <TwoDimensional xMax="800" yMax="600"/>
        </SpaceModel>
		
		<EntityTypes>
            <PhysicalAgentType name="Cube"> 
            </PhysicalAgentType>            
        </EntityTypes>
		
	</SimulationModel>
	<InitialState>
		<!-- create the cube -->
		<PhysicalAgent type="Cube" id="1" name="Cube" width="100" height="100" depth="100" x="300" y="300"/>
	</InitialState>
	<UserInterface supportedLanguages="">
		<AnimationUI>
            <Views>
                <SpaceView canvasColor="grey">
                    <TwoDimensionalSpaceView3D>
                    	<GlobalCamera position="0.0 0.0 500.0" viewVector="0.0 0.0 -1.0" upVector="0.0 1.0 0.0"/>
                    </TwoDimensionalSpaceView3D>
                </SpaceView>
                
                <PhysicalObjectView physicalObjectIdRef="1">
                    <PhysicalShape3D>
                        <Cube fill="blue"/>
                    </PhysicalShape3D>
                </PhysicalObjectView>
            </Views>
        </AnimationUI>
	</UserInterface>
</SimulationScenario>
