		<Statistics>
			
			<Variable name="Food" dataType="Float">
				
				<Source>
					<ObjectProperty property="foodStock" objectType="Person"/>
				</Source>
			</Variable>
			
			<Variable name="Price" dataType="Float">
				
				<Source>
