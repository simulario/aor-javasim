<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="prettyprint.xsl"?>
<SimulationScenario scenarioName="Test2D_restitution"
	scenarioTitle="Friction Test" simulationManagerDirectory="../../.."
	version="0.8.4" xsi:schemaLocation="http://aor-simulation.org ../../../ext/aorsl/AORSL_0-8-4.xsd"
	xmlns="http://aor-simulation.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:h="http://www.w3.org/1999/xhtml" xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:aors="http://aor-simulation.org">
	<SimulationParameters simulationSteps="100000"
		stepDuration="50" stepTimeDelay="10" timeUnit="ms"></SimulationParameters>

	<SimulationModel autoGravitation="true" autoImpulse="true"
		autoKinematics="true" modelName="Test2D" modelTitle="Friction Test">
		<documentation>
			<dc:creator>Holger Wuerke</dc:creator>
			<dc:description>Friction Test</dc:description>
		</documentation>

		<SpaceModel geometry="Euclidean" spatialDistanceUnit="m">
			<TwoDimensional_LateralView xMax="1000"
				yMax="500" autoKinematics="true" autoCollisionHandling="true"
				autoCollisionDetection="true" />
		</SpaceModel>

		<EntityTypes>
			<PhysicalObjectType name="Box">
				<InitialAttributeValue attribute="width"
					value="40" />
				<InitialAttributeValue attribute="height"
					value="40" />
				<InitialAttributeValue attribute="m" value="1" />
			</PhysicalObjectType>

			<PhysicalObjectType name="Triangle">
				<InitialAttributeValue attribute="m" value="1000" />
			</PhysicalObjectType>

			<PhysicalObjectType name="Ground">
				<InitialAttributeValue attribute="width"
					value="1000" />
				<InitialAttributeValue attribute="height"
					value="10" />
				<InitialAttributeValue attribute="m" value="1000" />
			</PhysicalObjectType>
		</EntityTypes>
	</SimulationModel>

	<InitialState>
		<PhysicalObject id="1" materialType="Stone" name="Stone"
			shape2D="rectangle" type="Box" x="30" y="160" rotZ="60"></PhysicalObject>

		<PhysicalObject id="2" materialType="Wood" name="Wood"
			shape2D="rectangle" type="Box" x="330" y="160" rotZ="60"></PhysicalObject>

		<PhysicalObject id="3" materialType="Rubber" name="Rubber"
			shape2D="rectangle" type="Box" x="630" y="160" rotZ="60"></PhysicalObject>

		<PhysicalObject id="5" materialType="Stone"
			shape2D="polygon" type="Triangle" points="300,1 1,150 1,1"></PhysicalObject>

		<PhysicalObject id="6" materialType="Wood"
			shape2D="polygon" type="Triangle" points="600,1 300,150 300,1"></PhysicalObject>

		<PhysicalObject id="7" materialType="Rubber"
			shape2D="polygon" type="Triangle" points="900,1 600,150 600,1"></PhysicalObject>
	</InitialState>

	<UserInterface>
		<AnimationUI>
			<Views>
				<SpaceView>
					<TwoDimensionalSpaceView2D
						backgroundColor="grey" />
				</SpaceView>
				<PhysicalObjectView physicalObjectType="Box"
					displayName="true">
					<PhysicalShape2D>
						<Rectangle fill="blue" />
					</PhysicalShape2D>
				</PhysicalObjectView>
        <PhysicalObjectView physicalObjectType="Triangle">
          <PhysicalShape2D>
            <Polygon fill="black" />
          </PhysicalShape2D>
          </PhysicalObjectView>
				<PhysicalObjectView physicalObjectType="Ground">
					<PhysicalShape2D>
						<Rectangle fill="black" />
					</PhysicalShape2D>
				</PhysicalObjectView>
			</Views>
		</AnimationUI>

	</UserInterface>
</SimulationScenario>
