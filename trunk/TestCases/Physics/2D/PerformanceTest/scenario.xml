<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="prettyprint.xsl"?>
<SimulationScenario scenarioName="PerformanceTest"
                    scenarioTitle="PerformanceTest"
                    simulationManagerDirectory="../../.." version="0.9"
                    xsi:schemaLocation="http://aor-simulation.org ../../../../AORSL/AORSL_0-9.xsd"
                    xmlns="http://aor-simulation.org"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns:xs="http://www.w3.org/2001/XMLSchema"
                    xmlns:xi="http://www.w3.org/2001/XInclude"
                    xmlns:saxon="http://saxon.sf.net/"
                    xmlns:h="http://www.w3.org/1999/xhtml"
                    xmlns:dc="http://purl.org/dc/elements/1.1/"
                    xmlns:aors="http://aor-simulation.org">
  <SimulationParameters simulationSteps="100" stepDuration="50"
                        stepTimeDelay="0" timeUnit="ms"></SimulationParameters>

  <SimulationModel modelName="PerformanceTest" modelTitle="PerformanceTest">
    <documentation>
      <dc:creator>Holger Wuerke</dc:creator>

      <dc:description>PerformanceTest</dc:description>
    </documentation>

    <SpaceModel geometry="Toroidal" spatialDistanceUnit="m">
      <TwoDimensional_LateralView autoCollisionDetection="true"
                                  autoCollisionHandling="true"
                                  autoKinematics="true" xMax="2000"
                                  yMax="2000"></TwoDimensional_LateralView>
    </SpaceModel>

    <EntityTypes>
      <PhysicalObjectType name="Box">
        <InheritedAttributeSettings attribute="m" initialValue="1" />

        <InheritedAttributeSettings attribute="shape2D"
                                    initialValue="rectangle" />
      </PhysicalObjectType>

      <PhysicalObjectType name="Ball">
        <InheritedAttributeSettings attribute="shape2D" initialValue="circle" />

        <InheritedAttributeSettings attribute="m" initialValue="1" />
      </PhysicalObjectType>

      <PhysicalObjectType name="Triangle">
        <InheritedAttributeSettings attribute="shape2D" initialValue="polygon" />

        <InheritedAttributeSettings attribute="m" initialValue="1" />
      </PhysicalObjectType>
    </EntityTypes>
  </SimulationModel>

  <InitialState>
    <PhysicalObjects hasRandomPosition="true" type="Box">
      <RangeStartID language="Java">1</RangeStartID>

      <RangeEndID language="Java">8000</RangeEndID>

      <Slot property="width">
        <ValueExpr language="Java">Random.uniformInt(1, 5)</ValueExpr>
      </Slot>

      <Slot property="height">
        <ValueExpr language="Java">Random.uniformInt(1, 5)</ValueExpr>
      </Slot>

      <Slot property="vx">
        <ValueExpr language="Java">Random.uniformInt(-10, 10)</ValueExpr>
      </Slot>

      <Slot property="vy">
        <ValueExpr language="Java">Random.uniformInt(-10, 10)</ValueExpr>
      </Slot>
    </PhysicalObjects>

    <PhysicalObjects hasRandomPosition="true" type="Ball">
      <RangeStartID language="Java">100001</RangeStartID>

      <RangeEndID language="Java">108000</RangeEndID>

      <Slot property="width">
        <ValueExpr language="Java">Random.uniformInt(1, 5)</ValueExpr>
      </Slot>

      <Slot property="vx">
        <ValueExpr language="Java">Random.uniformInt(-10, 10)</ValueExpr>
      </Slot>

      <Slot property="vy">
        <ValueExpr language="Java">Random.uniformInt(-10, 10)</ValueExpr>
      </Slot>
    </PhysicalObjects>

    <PhysicalObjects hasRandomPosition="true" points="-1,1 -1,-1 1,0"
                     shape2D="polygon" type="Triangle">
      <RangeStartID language="Java">200001</RangeStartID>

      <RangeEndID language="Java">204000</RangeEndID>

      <Slot property="vx">
        <ValueExpr language="Java">Random.uniformInt(-10, 10)</ValueExpr>
      </Slot>

      <Slot property="vy">
        <ValueExpr language="Java">Random.uniformInt(-10, 10)</ValueExpr>
      </Slot>
    </PhysicalObjects>
  </InitialState>

  <UserInterface supportedLanguages="de">
    <AnimationUI>
      <Views>
        <SpaceView>
          <TwoDimensionalSpaceView2D backgroundColor="grey"></TwoDimensionalSpaceView2D>
        </SpaceView>

        <PhysicalObjectView physicalObjectType="Box">
          <PhysicalShape2D>
            <Rectangle fill="blue"></Rectangle>
          </PhysicalShape2D>
        </PhysicalObjectView>

        <PhysicalObjectView physicalObjectType="Ball">
          <PhysicalShape2D>
            <Circle fill="red"></Circle>
          </PhysicalShape2D>
        </PhysicalObjectView>
      </Views>
    </AnimationUI>
  </UserInterface>
</SimulationScenario>
