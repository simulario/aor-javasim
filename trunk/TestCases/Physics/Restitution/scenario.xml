<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="prettyprint.xsl"?>
<SimulationScenario scenarioName="Test2D_restitution"
	scenarioTitle="Restitution Test" simulationManagerDirectory="../../.."
	version="0.8.4" xsi:schemaLocation="http://aor-simulation.org ../../../ext/aorsl/AORSL_0-8-4.xsd"
	xmlns="http://aor-simulation.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:h="http://www.w3.org/1999/xhtml" xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:aors="http://aor-simulation.org">
	<SimulationParameters simulationSteps="100000"
		stepDuration="50" stepTimeDelay="10" timeUnit="ms"></SimulationParameters>

	<SimulationModel autoGravitation="true" autoImpulse="true"
		autoKinematics="true" modelName="Test2D" modelTitle="Restitution Test">
		<documentation>
			<dc:creator>Holger Wuerke</dc:creator>
			<dc:description>Restitution Test</dc:description>
		</documentation>

		<SpaceModel geometry="Euclidean" spatialDistanceUnit="m">
			<TwoDimensional_LateralView xMax="700"
				yMax="500" autoKinematics="true" autoCollisionHandling="true"
				autoCollisionDetection="true" />
		</SpaceModel>

		<EntityTypes>
			<PhysicalObjectType name="Circle">
				<InitialAttributeValue attribute="width"
					value="40" />

				<InitialAttributeValue attribute="height"
					value="40" />

				<InitialAttributeValue attribute="m" value="10" />
			</PhysicalObjectType>

			<PhysicalObjectType name="Ground">
				<InitialAttributeValue attribute="width"
					value="700" />

				<InitialAttributeValue attribute="height"
					value="10" />

				<InitialAttributeValue attribute="m" value="1000" />
			</PhysicalObjectType>
		</EntityTypes>
	</SimulationModel>

	<InitialState>
		<PhysicalObject id="1" materialType="Aluminium" name="Aluminium"
			shape2D="circle" type="Circle" x="100" y="400"></PhysicalObject>

		<PhysicalObject id="2" materialType="Iron" name="Iron"
			shape2D="circle" type="Circle" x="200" y="400"></PhysicalObject>

		<PhysicalObject id="3" materialType="Rubber" name="Rubber"
			shape2D="circle" type="Circle" x="300" y="400"></PhysicalObject>

		<PhysicalObject id="4" materialType="Stone" name="Stone"
			shape2D="circle" type="Circle" x="400" y="400"></PhysicalObject>

		<PhysicalObject id="5" materialType="Wood" name="Wood"
			shape2D="circle" type="Circle" x="500" y="400"></PhysicalObject>

		<PhysicalObject id="10" materialType="Stone" 
			shape2D="rectangle" type="Ground" x="350" y="5"></PhysicalObject>
	</InitialState>
	
	      <UserInterface>
    <AnimationUI>
      <Views>
      <SpaceView>
      <TwoDimensionalSpaceView2D backgroundColor="grey" />
      </SpaceView>
        <PhysicalObjectView physicalObjectType="Circle" displayName="true" >
          <PhysicalShape2D>
            <Circle fill="blue" />
          </PhysicalShape2D>
        </PhysicalObjectView>
        <PhysicalObjectView physicalObjectType="Ground">
          <PhysicalShape2D>
            <Rectangle fill="black" />
          </PhysicalShape2D>
        </PhysicalObjectView>
      </Views>
    </AnimationUI>

  </UserInterface>
</SimulationScenario>
