          <PhysicalShape2D>
            <Circle fill="blue" strokeWidth="1" stroke="black" />
          </PhysicalShape2D>
        </PhysicalObjectView>
        <PhysicalObjectView physicalObjectType="Wall">
          <PhysicalShape2D>
            <Rectangle fill="black" />
