<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="prettyprint.xsl"?>

<SimulationScenario
 version="0.8.4" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://aor-simulation.org ../../../ext/aorsl/AORSL_0-8-4.xsd"
 xmlns="http://aor-simulation.org"
 xmlns:aors="http://aor-simulation.org"
 xmlns:dc="http://purl.org/dc/elements/1.1/"
 scenarioName="Balls"
 scenarioTitle="Multiple moving balls."
 simulationManagerDirectory="../../..">

  <SimulationParameters simulationSteps="500" stepDuration="50" timeUnit="ms" stepTimeDelay="10"/>

  <SimulationModel modelName="Pyramid" modelTitle="Pyramid">
                                
    <documentation>
      <dc:creator>Holger Wuerke</dc:creator>
      <dc:description>
        A pyramid of boxes that gets destroyed.
      </dc:description>
    </documentation>                            
    
    <SpaceModel geometry="Euclidean" spatialDistanceUnit="m">
      <TwoDimensional_LateralView yMax="500" xMax="1000" autoCollisionDetection="true" autoCollisionHandling="true" autoKinematics="true"></TwoDimensional_LateralView>
    </SpaceModel>
   
    <EntityTypes>
       <PhysicalObjectType name="Box">
         <InitialAttributeValue attribute="width" value="20"/>
         <InitialAttributeValue attribute="height" value="20"/>
         <InitialAttributeValue attribute="m" value="1"/>
       </PhysicalObjectType>
      <PhysicalObjectType name="Ball">
         <InitialAttributeValue attribute="width" value="30"/>
         <InitialAttributeValue attribute="m" value="100"/>
       </PhysicalObjectType>     
      <PhysicalObjectType name="Wall">
         <InitialAttributeValue attribute="width" value="10"/>
         <InitialAttributeValue attribute="height" value="500"/>
         <InitialAttributeValue attribute="m" value="1000"/>
       </PhysicalObjectType>         
      <PhysicalObjectType name="Ground">
         <InitialAttributeValue attribute="width" value="1000"/>
         <InitialAttributeValue attribute="height" value="10"/>
         <InitialAttributeValue attribute="m" value="1000"/>
       </PhysicalObjectType>         
   </EntityTypes>
       
  </SimulationModel>

  <InitialState>
    <PhysicalObject id="1" type="Ground" shape2D="rectangle" x="500" y="0" />
